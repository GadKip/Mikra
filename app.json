{
  "expo": {
    "name": "מקרא מבואר",
    "slug": "mikra-app",
    "version": "1.0.13",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "static",
      "build": {
        "babel": {
          "include": [
            "@expo/vector-icons",
            "nativewind"
          ]
        }
      },
      "fonts": {
        "asset": [
          "./assets/fonts/David.ttf",
          "./assets/fonts/DavidBD.ttf",
          "./assets/fonts/EzraSILSR.ttf",
          "./assets/fonts/GuttmanKeren.ttf"
        ]
      }
    },
    "newArchEnabled": true,
    "plugins": [
      "expo-router",
      ["expo-screen-orientation",
      {
        "initialOrientation": "DEFAULT"
      }]
    ],
    "experiments": {
      "tsconfigPaths": true
    },
    "extra": {
      "supportsRTL": true,
      "forcesRTL": true,
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "98c020ac-7dbf-409d-9b00-72bfef5f5e8b"
      }
    }
  }
}
